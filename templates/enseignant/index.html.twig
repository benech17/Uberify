{% extends 'base.html.twig' %}
{% block title 'Trouver un enseignant' %}


{% block body %}
	<div class="container mt-4">
		<h1>
			Trouver un enseignant
		</h1>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Pseudo</th>
					<th>Email</th>
					<th>Exercices</th>
					<th>Note Globale</th>
					<th>Actions</th>

				</tr>
			</thead>
			<tbody>

				{% for user in users %}
					{% if users|length >0 %}
						<tr>
							<td>
							    {{user.username}}
							</td>
							<td>{{user.email}}</td>
		
							<td>
								{% if ('ROLE_ENSEIGNANT' in user.roles )  %}
									{{user.exercicesCreated|length}}
								{% endif %}
							</td>
                            <td>{{user.meanNote}}</td>
							<td>
								<button class="btn btn-info">Contacter</button>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">
								Il n'y a pas d'enseignants inscrits
							</td>
						</tr>
					{% endif %}
				{% endfor %}
			</tbody>
		</tbody>
	</table>
</div>{% endblock %}
